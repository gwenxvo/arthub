<h1>All Artpieces</h1>
<div class="container">
  <div class="row">
      <% @artpieces.each do |artpiece| %>
        <div class="col-lg-4 col-sm-12 col-md-6 d-flex align-items-stretch">
          <div class="card mb-2 border-0">
            <img class="card-img rounded-3" src="https://upload.wikimedia.org/wikipedia/commons/a/aa/Claude_Monet_-_Water_Lilies_-_1906%2C_Ryerson.jpg">
            <div class="card-body p-0">
                <p class="card-title m-0 lh-sm"><%= link_to artpiece.title, artpiece_path(artpiece), class:"text-decoration-none stretched-link text-dark fs-4 fw-normal" %></p>
                <div class="card-text d-flex align-content-start">
                  <ul class="list-unstyled lh-sm">
                    <li class="text-secondary opacity-75"><%= artpiece.description %></li>
                    <li class="text-secondary opacity-75"><%= artpiece.artist %></li>
                    <li class="mt-2 fw-medium fs-6 text-decoration-underline">$<%= artpiece.day_price %> total</li>
                  </ul>
                </div>
            </div>
          </div>
        </div>
      <% end %>
  </div>



  <div class="row mt-5 mb-5">
    <div class="col-lg-12 col-sm-12 col-md-12 d-flex justify-content-around">
      <h2>Add a new artpiece</h2>
    </div>
    <div class="col-lg-12 col-sm-12 col-md-12 d-flex justify-content-around">
      <%= simple_form_for(@artpiece) do |f| %>
        <%= f.input :title %>
        <%= f.input :artist %>
        <%= f.input :description %>
        <%= f.input :day_price %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
