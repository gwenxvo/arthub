<div class="container">
  <h1>Dashboard</h1>
  <div class="row">
      <div class="card mb-5 pb-2">Your Upcoming Bookings
        <div class="row">
          <% @bookings.each do |booking| %>
            <div class="col-lg-4 col-sm-12 col-md-6 d-flex align-items-stretch">
            <% booked_artpiece = @all_artpieces.find_by(id: booking.artpiece_id) %>
              <div class="card mb-2 border-0">
                <div class=""><%= cl_image_tag booked_artpiece.photos.first.key, :height=>250, :width=>250, crop: :fill, class: "object-fit-cover rounded-3" %></div>
                <div class="card-body p-0 h-25">
                  <p class="card-title m-0 lh-sm"><%= link_to booked_artpiece.title, artpiece_path(booked_artpiece), class:"text-decoration-none stretched-link text-dark fs-4 fw-normal" %></p>
                    <ul class="list-unstyled lh-sm">
                      <li class="text-secondary opacity-75"><%= booked_artpiece.description %></li>
                      <li class="text-secondary opacity-75"><%= booked_artpiece.artist %></li>
                      <li>From <%= booking.start_date.strftime("%B %d") %></li>
                      <li>To <%= booking.end_date.strftime("%B %d") %></li>
                    </ul>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="card pb-3 mb-3">Your Art
        <div class="row">
          <% @artpieces.each do |artpiece| %>
            <div class="col-lg-4 col-sm-12 col-md-6 d-flex align-items-stretch">
              <div class="card mb-2 border-0">
                <div class=""><%= cl_image_tag artpiece.photos.first.key, :height=>250, :width=>250, crop: :fill, class: "object-fit-cover rounded-3" %></div>
                <div class="card-body p-0 h-25">
                    <p class="card-title m-0 lh-sm"><%= link_to artpiece.title, artpiece_path(artpiece), class:"text-decoration-none stretched-link text-dark fs-4 fw-normal" %></p>
                    <div class="card-text">
                      <ul class="list-unstyled lh-sm">
                        <li class="text-secondary opacity-75"><%= artpiece.description %></li>
                        <li class="text-secondary opacity-75"><%= artpiece.artist %></li>
                        <div class="container-price-av">
                          <li class="mt-2 fw-medium fs-6 text-decoration-underline">$<%= artpiece.day_price %>/day </li>
                        </div>
                      </ul>
                    </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
  </div>



</div>
